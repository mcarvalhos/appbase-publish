generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id     String  @id @default(uuid()) // ser√° o mesmo do auth.users
  login  String  @unique
  name   String
  email  String  @unique
  avatar String?
  role   String?

  @@map("users")
}

